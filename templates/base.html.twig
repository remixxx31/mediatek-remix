<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="La médiathèque de La chapelle-Curreaux">
		<title>
			{% block title %}Mediatek
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
												           and uncomment the following Encore helpers to start using Symfony UX #}

		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}

			<link rel="stylesheet" href="{{asset('assets/CSS/bootstrap.min.css')}}">
			<link rel="stylesheet" href="{{asset('assets/CSS/mediamix.css')}}">
			<script src="https://kit.fontawesome.com/6a69c5423c.js" crossorigin="anonymous"></script>
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
			<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
			<script src="{{asset('assets/JS/bootstrap.bundle.js')}}"></script>
			<script src="{{asset('assets/JS/scriptperso.js')}}"></script>
		{% endblock %}
	</head>
	<body>
		{% block nav%}
			<nav class="navbar navbar-expand-md navbar-dark h-20 pt-2 d-flex align-item-center container-fluid  fixed-top bg-light mb-5 ">
				<div class="px-3 w-15">
					<a class="navbar-brand float-left" href="#">Mediatek</a>
				</div>
				{# Menu burger #}
				<button class="navbar-toggler float-right" type="button" data-toggle="collapse" data-target="#navbarCollapse"
				 aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="container w-85">
					<div class="collapse navbar-collapse px-2" id="navbarCollapse">
						<ul class="navbar-nav mr-auto">

							<div class="w-20">
								<li class="nav-item active">
									<a class="nav-link text-secondary" href="#">
										<i class="fas fa-book"></i>
									</i>Mes emprunts<span class="sr-only"></span>
								</li>
							</a>
						</li>
					</div>

					<div class="w-20">
						<li class="nav-item active">
							<a class="nav-link text-secondary" href="#">Le catalogue
								<span class="sr-only"></span>
							</a>
						</li>
					</div>

					<div class="ms-5">
						{% if app.user %}
							<a href="{{path('account')}}">Mon compte
								<small>({{app.user.firstname}})</small>
							</a>
							|
							<a href="{{path('app_logout')}}">Déconnexion</a>
						{% else %}

							<a href="{{path('app_login')}}">Connexion</a>
							|
							<a href="{{path('register')}}">Inscription</a>
						{% endif %}
					</div>

				</ul>
			{# FIn menu burger #}
	</nav>
		</body>
	</html>
{% endblock %}{%block brand %}{% endblock %}{% block body %}{% endblock %}</body></html>
